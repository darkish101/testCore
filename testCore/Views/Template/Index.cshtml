@{
    ViewData["Title"] = "الفئات";
}
<div class="content">
    <div class="block">
        <div class="block-header" style="border-bottom: 1px solid #e8e8e8;">
            <h3 class="block-title remove-margin">انشاء </h3>
        </div>
        <div class="block-content block-content-full v-tabs-wrap">
            <div id="divTemplateForm">
                @{ await Html.RenderPartialAsync("SaveTemplate"); }
            </div>
        </div>
    </div>
    <hr />
    <div class="block">
        <div class="block-header" style="border-bottom: 1px solid #e8e8e8;">
            <h3 class="block-title remove-margin">عرض </h3>
        </div>
        <div class="block-content block-content-full v-tabs-wrap">
            <div id="divTemplate" class="row"></div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#divTemplate").load('@Url.Action("GetTemplate", "Template")');
    });
</script>